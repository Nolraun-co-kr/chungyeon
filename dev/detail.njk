{% extends 'layout/base.njk' %}
{% block content %}
<div class="sub sub__detail">
    <div class="wrap">

        <!-- 제품 상세 상단 -->
        <div class="product">
            <div class="breadcrumb">
                <span class="">Home</span>
                <span class="">약속처방</span>
